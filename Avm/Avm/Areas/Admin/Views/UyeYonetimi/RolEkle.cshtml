@{
    ViewBag.Title = "RolEkle";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>RolEkle</h2>
@{
    Microsoft.AspNet.Identity.EntityFramework.IdentityUserRole rol = new Microsoft.AspNet.Identity.EntityFramework.IdentityUserRole();

    rol.RoleId = "0";
    int id = 1;
}


@using (Html.BeginForm("Ekle", "UyeYonetimi", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Roller</h4>
        <h6>1 Admin</h6>
        <h6>2 Satıcı</h6>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        

        <div class="form-group">
            @Html.Label("Verilecek Rol Id", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" name="Role" class="form-control"/> 
                @Html.ValidationMessage("Rol Id Yanlış Girildi", "", new { @class = "text-danger" })
            
            </div>
        </div>  

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @{Session["Role"] = rol.RoleId; }
                   
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Ekle" class="btn btn-default " />
                    </div>
                </div>

            </div>
        </div>
    </div>
                    }

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
